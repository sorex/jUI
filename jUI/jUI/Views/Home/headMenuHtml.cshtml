                display: inline-block;
                position: relative;
                top: 3px;
            }

            .jui-headMenu .jui-headMenu-u1 {
                padding-top: 4px;
                padding-bottom: 4px;
                position: relative;
                top: 9px;
                border-style: solid;
                border-width: 0 2px 2px 2px;
                border-color: #094AB2;
                z-index: 40000;
                cursor: default;
                display: none;
                background-color: #ffffff;
            }
                .jui-headMenu .jui-headMenu-u1 li a {
                    padding-left: 15px;
                    padding-right: 15px;
                    padding-top: 6px;
                    padding-bottom: 6px;
                    text-align: left;
                    color: black;
                    display: block;
                }

                    .jui-headMenu .jui-headMenu-u1 li a:hover {
                        background-color: #f0f0f0;
                    }

            .jui-headMenu .jui-headMenu-solid {
                display: block;
                border-bottom: 1px solid #666;
                border-left: 0 none;
                border-right: 0 none;
                margin-left: 15px;
                margin-right: 15px;
                margin-top: 8px;
                margin-bottom: 8px;
                cursor: default;
            }

            .jui-headMenu .jui-headMenu-vsolid {
                display: block;
                height: 20px;
                border-left: 1px solid #ffffff;
                margin-top: 10px;
                margin-bottom: 10px;
                float: left;
            }

            .jui-headMenu .jui-headMenu-showul {
                visibility: visible;
            }

            .jui-headMenu .jui-headMenu-hideul {
                visibility: hidden;
            }

