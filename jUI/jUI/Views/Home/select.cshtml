					{ value: " Japan", text: "日本" },
					{ value: "America", text: "美国" },
					{ value: "Korea  ", text: "朝鲜" },
					{ value: "Corea  ", text: "韩国" }
				],
				placeholder: "请国家选择(可以多选)",
				width: "200px",
				model: "multiple",
				onSelectChange: function (selectList) {
					var content = "";
					if (selectList != null) {
						for (var i = 0; i < selectList.length; i++) {
							content += "英文名称为:" + selectList[i]["value"] + "中文名称为:" + selectList[i]["text"] + "；"
						}
						alert("选择的内容为：" + content.substring(0, content.length - 1));
					} else {
						alert("无数据");
					}
				}
			});

			$("#multipleBtn").click(function () {
				var selectList = $("#showSelect3").jSelect("getSelectValueText");
				var content = "";
				if(selectList!=null){
					for (var i = 0; i < selectList.length; i++) {
						content += "英文名称为:" + selectList[i]["value"] + "中文名称为:" + selectList[i]["text"] + "；"
					}
					alert("选择的内容为：" + content.substring(0, content.length - 1));
				}else{
					alert("无数据");
				}
			
			

			});

		});

