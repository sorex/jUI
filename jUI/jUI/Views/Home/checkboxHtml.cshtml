@section head{
    <style type="text/css">
        .jui-checkbox
        {
        }

       .jui-checkbox label.checkbox
        {
            padding-left: 24px;
            cursor: pointer;
            background: url(/Content/images/jui-jcheckbox.png) no-repeat left -21px;
            line-height: 22px;
            height: 21px;
            display: inline-block;
        }

        .jui-checkbox label.checked
        {
            background-position: left 100%;
        }

         .jui-checkbox label.disabled
        {
            background-position: left 0px;
        }
    </style>
    <script type="text/javascript">

        $(function () {
            $(":checkbox+label").each(function () {

                $(this).addClass('checkbox'); /*给lable加样式*/
                if ($(this).prev().is(':disabled') == false) { /*判断状态*/
                    if ($(this).prev().is(':checked'))
                        $(this).addClass("checked");
                } else {
                    $(this).addClass('disabled');
                }

            }).click(function (event) { /*点击之后样式的改变*/

                if (!$(this).prev().is(':checked')) {
                    $(this).addClass("checked");
                    $(this).prev().checked = true;
                }
                else {
                    $(this).removeClass('checked');
                    $(this).prev().checked = false;
                }

                event.stopPropagation();/*方法终止*/

            }).prev().hide();/*checkbox隐藏*/
        });

    </script>
}

