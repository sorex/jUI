    <style type="text/css">
        .jui-headMenu {
            height: 40px;
            width: 100%;
            background-color: #094ab2;
            white-space: nowrap; /*禁止文字自动换行*/
            position: relative;
            display: block;
        }

            .jui-headMenu a {
                text-decoration: none;
            }

                .jui-headMenu a:hover {
                    background-color: #073d92;
                }

            .jui-headMenu .jui-headMenu-ju {
                float: left;
                height: 40px;
            }

                .jui-headMenu .jui-headMenu-ju > li {
                    height: 40px;
                    padding-right: 15px;
                    position: relative;
                    float: left;
                }

