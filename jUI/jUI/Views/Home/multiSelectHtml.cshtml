@section head{
	<link href= "@Url.Content("~/Content/jUI/chosen.css")" rel="stylesheet" />
	<script src="@Url.Content("~/Scripts/jUI/chosen.jquery.js")" type="text/javascript" ></script>
	<script type="text/javascript">

		$(function () {
			$(".chzn-select").chosen();//样式调用
			$("#multiSelectHtml").change(function () {

				//alert("选择的国家中文名为:" + $(this).val() + ":英文名称为:" + $(this).find("option:selected").text());

				var selectValue = $(this).val();
				var selectText = $(this).find("option:selected").text();
				if (selectValue != null) {
					var textList = selectText.substring(0, selectText.length - 1).split('　');
					var content = "";
					for (var i = 0; i < selectValue.length ; i++) {
						content += "英文名称为:" + selectValue[i] + "中文名称为:" + textList[i] + "；"
					}
					alert("选择的内容为："+content.substring(0, content.length - 1));
				} else {
					alert("您清空了所有选择");
				}
			});
	
		});
	</script>

}

