    <script type="text/javascript">

        function datas() {
            return [
						{
						    name: "创建"//名称
							, href: "#"
                            , id: "A1"//链接
							, icon: "whiteplus"//图标 
                            ,line:true//分割线
							, children: [
												{
												    name: "文件夹"
													, href: "#"
													, id: "A21"
												    ,line:true//分割线
												}
												, {
												    name: "Word 文档"
													, href: "#"
													, id: "A22"
												}
												, {
												    name: "Excel 工作薄"
													, href: "#"
													, id: "A22"
												}
							]//子项
						}
						, {
						    name: "上载"
							, href: "#"
							, id: "B1"
							, icon: "whitearrows"
						}
						, {
						    name: "打开"
							, href: "#"
							, id: "C1"
							, icon: ""
						}
						, {
						    name: "管理"
							, href: "#"
							, id: "G1"
							, icon: ""
							, children: [
												{
												    name: "重命名"
													, href: "#"
													, id: "B21"
												}
												, {
												    name: "删除"
													, href: "#"
													, id: "B22"
												}
												, {
												    name: "移致"
													, href: "#"
													, id: "B23"
												    , line: true
												}
												, {
												    name: "属性"
													, href: "#"
													, id: "B24"
												}
							]
						}
						, {
						    name: "清除选定内容"
							, href: "#"
							, id: "F1"
							, icon: ""
						}
            ];
        }

        $(function () {
            var data = datas();
            $("#headMenu").addClass('jui-headMenu').empty().append("<ul class='jui-headMenu-ju'></ul>").bind("selectstart", function () { return false; });
            for (var i = 0; i < data.length; i++) {
                    var id = data[i]["id"];
                    var name = data[i]["name"];
                    var href = data[i]["href"];
                    var icon = data[i]["icon"];
                    var image = "../../Images/headMenuTestImage.png";
                    var children = data[i]["children"];
                    var hline = data[i]["line"];
                    var position = data[i]["position"]; 

                    if (icon != null && icon != "") {
                        $(".jui-headMenu-ju").append("<li id='l" + id + "'><a>"
                            + "<span class='jui-headMenu-las1'> <span class='jui-headMenu-lass'> <span class='jui-headMenu-lass_endicon'><span style='width:26px;height:26px;float:left;position:relative;top:4px;'><img class='jui-headMenu-icon-"
                            + icon + "'  src='" + image + "'/></span></span> " + name + "</span> </span>"
                            + "</a></li>");
                    } else {
                        $(".jui-headMenu-ju").append("<li id='l" + id + "'><a>"
                            + "<span class='jui-headMenu-las1'> <span class='jui-headMenu-lass'> <span class='jui-headMenu-lass_endicon'><span style='height:26px;float:left;position:relative;top:4px;'></span></span> " + name + "</span> </span>"
                            + "</a></li>");
                    }
                    var lw = 0;
                    if (children != null && children.length) {
                        $("#l" + id).append("<ul class='jui-headMenu-u1' id='u" + id + "'></ul>"); //二级菜单
                        for (var j = 0; j < children.length; j++) {                            
                            var uid = children[j]["id"];
                            var uname = children[j]["name"];
                            var uhref = children[j]["href"];
                            var uline = children[j]["line"];
                            $("#u" + id).append("<li id='" + uid + "'><a href='" + uhref + "'><span>" + uname + "</span></a></li>");
                            if(uline==true)
                                $("#u" + id).find("li").eq(j).append("<span  class='jui-headMenu-solid'></span>");
                            lw = $("#l" + id).width();
                            $("#u" + id).css("width", 2 * lw);
                            $("#l" + id).width(lw);

                            if (i == data.length - 1) {
                                $("#l" + id).children("ul").css({ "left": -lw+12+"px" });
                            }
                            lw = 0;
                        }
                    }
                    if (hline == true) {
                        $("#l"+id).after("<span class='jui-headMenu-vsolid '></span>");
                    }
            }
            var endImg = '../../Content/images/carat-s-ffffff.png';//箭头图标
            $("#headMenu").find("li").has("ul").find(".jui-headMenu-lass").after("<img class='jui-headMenu-endImg' style='' src='" + endImg + "'/>");
            $("#headMenu").children("ul").children("li").click(function () {
                $(this).children("ul").slideToggle("fast").end().siblings().has("ul:visible").children("ul").hide();
            });
            $("#headMenu").find("li").bind("click", function () {
                if ($(this).find(".jui-headMenu-endImg").length == 0) {
                    ClickAction($(this).text());
                }
            });
        });

        function ClickAction(name){
            alert(name);
        }
    </script>
}

