            width: 7px;
        }


        .jui-jtip-up-arrowhead
        {
            background-image: url(../Content/images/jui-jtip-carat-n-cccccc.png);
            background-repeat: no-repeat;
            height: 7px;
            width: 13px;
        }

        .jui-jtip-up-arrowhead-error
        {
            background-image: url(../Content/images/jui-jtip-carat-n-fef1ec.png);
            background-repeat: no-repeat;
            height: 7px;
            width: 13px;
        }


        .jui-jitp-nomal-left-content
        {
            background-color: #cccccc;
            color: #ffffff;
        }



        .jui-jtip-success-left-content
        {
            background-color: #cccccc;
            color: #ffffff;
        }

        .jui-jtip-error-left-content
        {
            background-color: #cccccc;
            color: #cd0a0a;
        }



        .jui-jitp-nomal-up-content
        {
            background-color: #cccccc;
            color: #ffffff;
        }



        .jui-jtip-success-up-content
        {
            background-color: #cccccc;
            color: #ffffff;
        }

        .jui-jtip-error-up-content
        {
            background-color: #cccccc;
            color: #cd0a0a;
        }
    </style>

    <script type="text/javascript">

        $(function () {
            $("#Name").bind('mousemove', function () {
                $("#Name-tip-nomal-conetent").position({
                    of: $("#Name"),
                    my: "left middle",
                    at: "right middle",
                    offset: '6 0'
                });
                $("#Name-tip-arrowhead").position({
                    of: $("#Name"),
                    my: "left middle",
                    at: "right middle"
                });

            });

            $("#scuccess").bind('mousemove', function () {
                $("#Name-tip-nomal-success").position({
                    of: $("#scuccess"),
                    my: "left middle",
                    at: "right middle",
                    offset: '6 0'
                });
                $("#Div1").position({
                    of: $("#scuccess"),
                    my: "left middle",
                    at: "right middle"
                });

            });



            $("#Error").bind('mousemove', function () {

                $("#Name-tip-nomal-error").position({
                    of: $("#Error"),
                    my: "left middle",
                    at: "right middle",
                    offset: '6 0'
                });
                $("#Div2").position({
                    of: $("#Error"),
                    my: "left middle",
                    at: "right middle"
                });
            });




            $("#Name1").bind('mousemove', function () {

                $("#Name1-tip-nomal-conetent").position({
                    of: $("#Name1"),
                    my: "center top",
                    at: "center bottom",
                    offset: '0 6'
                });
                $("#Name1-tip-arrowhead").position({
                    of: $("#Name1"),
                    my: "center top",
                    at: "center bottom"
                });
            });



            $("#scuccess1").bind('mousemove', function () {

                $("#Name1-tip-nomal-success").position({
                    of: $("#scuccess1"),
                    my: "center top",
                    at: "center bottom",
                    offset: '0 6'
                });
                $("#Div11").position({
                    of: $("#scuccess1"),
                    my: "center top",
                    at: "center bottom"
                });
            });


            $("#Error1").bind('mousemove', function () {

                $("#Div22").position({
                    of: $("#Error1"),
                    my: "center top",
                    at: "center bottom"
                });
                $("#Name1-tip-nomal-error").position({
                    of: $("#Error1"),
                    my: "center top",
                    at: "center bottom",
                    offset: '0 6'
                });

            });

        });

    </script>
}

