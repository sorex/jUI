	<script type="text/javascript">
		$(function () {

			$("#showSelect").jSelect({
				items: [{ value: "China", text: "中国" },
					{ value: " Japan", text: "日本" },
					{ value: "America", text: "美国", selected: true },
					{ value: "Korea  ", text: "朝鲜" },
					{ value: "Corea  ", text: "韩国" }
				],
				placeholder: "请国家选择...",
				width: "100px",
				model: "single",
				onSelectChange: function (selectValue, selectText) {
					alert("选择的国家中文名为:" + selectText + ":英文名称为:" + selectValue);
				}
			});



			$("#singleBtn").click(function () {
				var selectObj = $("#showSelect").jSelect("getSelectValueText");
				alert("选择的国家中文名为:" + selectObj.text + ":英文名称为:" + selectObj.value);

			});
			$("#showSelect2").jSelect({
				placeholder: "请国家选择...",
