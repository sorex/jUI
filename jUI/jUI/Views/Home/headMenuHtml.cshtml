                    }

                .jui-headMenu .jui-headMenu-ju li {
                    list-style: none;
                    cursor: pointer;
                }

            .jui-headMenu .jui-headMenu-lass {
                vertical-align: middle;
                color: #fff;
                font-size: 14px;
                position: relative;
                padding-left: 4px;
