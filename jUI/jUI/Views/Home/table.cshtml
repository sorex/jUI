                            , sortType: "desc"                                              //排序规则
		                },
		                { head: "编号", context: "#Id", maxLength: 5, head_align: "left", v_align: "top", h_align: "left", height: "auto", width: "auto", sortColumn: "Name2", sortType: "asc" },
