		        , sortItem: { sortColumn: "Name5", sortType: "asc" }
                , onSortChange: function (sortColumn, head, sortType) {
                    $("#sort").jsortSelect("option", "sortItem", { sortColumn: sortColumn, sortType: sortType });
                }
		    });

		    $("#dd").click(function () {
		        $("#MyTable1").jtable("option", "sortItem", { sortColumn: "Name4", sortType: "desc" });
		    });
		    $("#sort").jsortSelect({
		        items: [{ sortColumn: "Name2", text: "编号" },
					{ sortColumn: "Name3", text: "年龄", sortType: "desc" },
					{ sortColumn: "Name4", text: "完成日期", sortType: "asc" },
					{ sortColumn: "Name5", text: "大小", sortType: "desc" }
		        ],
