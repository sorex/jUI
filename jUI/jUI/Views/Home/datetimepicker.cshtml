@{
	ViewBag.Title = "datetimepicker";
}

<h2>datetimepicker</h2>
@section head{
	<script type="text/javascript">
		$(function ()
		{
			$("#demoTabs").tabs();
			$("#descriptionTabs").tabs();
			$("#optionsAccordion").accordion({
				autoHeight: false,
				navigation: true
			});
			$("#eventsAccordion").accordion({
				autoHeight: false,
				navigation: true
			});
			$("#methodsAccordion").accordion({
				autoHeight: false,
				navigation: true
			});
		});
	</script>

	<link href="@Url.Content("~/Content/jUI/jui.jdatetimepicker.css")" rel="stylesheet" type="text/css" />
	<script type="text/javascript" src="@Url.Content("~/Scripts/jUI/jui.jdatetimepicker.js")"></script>
    
	<script type="text/javascript">
	    $(function () {
	        //默认显示年月日
	        $("#MyDatetimepicker1").jdatetimepicker();
            //仅显示年份
	        $("#MyDatetimepicker2").jdatetimepicker({
	            datetimeType: "yyyy"
	        });
            //仅显示年份及月份
	        $("#MyDatetimepicker3").jdatetimepicker({
	            datetimeType: "yyyy-MM"
	        });
            //日期显示格式为英文格式
	        $("#MyDatetimepicker7").jdatetimepicker({
                datetimeParse: "yyyy-MM-dd"
	        });
            //日历总是显示
	        $("#MyDatetimepicker8").jdatetimepicker({
               display: "display"//click为点击显示
	        });
	        //显示时分秒
	        $("#MyDatetimepicker9").jdatetimepicker({
	            datetimeType: "hh-mm-ss"
	        });
	        //显示时分
	        $("#MyDatetimepicker10").jdatetimepicker({
	            datetimeType: "hh-mm"
	        });
	        //显示时
	        $("#MyDatetimepicker11").jdatetimepicker({
	            datetimeType: "hh"
	        });
	        //显示当天
	        $("#MyDatetimepicker12").jdatetimepicker({
	            showToday:true
	        });
	    });
	</script>
}

